@keyframes punch
	0%
		opacity 0
	72%
		opacity 0
	75% 
		opacity 1
		transform scale(3), rotate(-3deg)
	90% 
		transform scale(0.9), rotate(-9deg)
	100% 
		transform scale(1), rotate(-9deg)

@keyframes sea
	0% 
		left -0.15em
	50% 
		left 0.05em
	100% 
		left -0.15em
		
@keyframes fadein
	0% 
		opacity 0
	80% 
		opacity 0
	100% 
		opacity 1

@keyframes palm
	0% 
		transform rotate(-80deg)
	40% 
		transform rotate(-82deg)
	55% 
		transform rotate(-88deg)
	85% 
		transform rotate(-82deg)
	100% 
		transform rotate(-80deg)
		
@keyframes rotate
	0%
		transform rotate(0deg)
	100%
		transform rotate(359deg)
	