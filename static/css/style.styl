@import "nib-index.styl"
@charset "utf-8";

global-reset()
/*
@font-face
   font-family Courier
   font-style normal
   src url(../font/Courier.ttf)*/

@css {
	input::-moz-focus-inner, button::-moz-focus-inner { border: 0; }
}

backgroundColor = #fff
jscampYellow = orange
jscampBrown = brown
jscampGreen = green
jscampBlue = #38ACEC
mWidth = 800px

body
	font-family Courier, monospace

#body
	position absolute
	top 0px
	left 0px
	bottom 0px
	right 0px

.page
	width 100%
	height 100%

#homepage
	overflow auto
	background linear-gradient(top left, #D1EBFF 0%, white 60%)

#logoanim
	font-size 5em
	font-weight bold

	position relative
	width mWidth
	height 380px
	margin 30px auto 0 auto
	
	img
		display none
	
#la_logo
	line-height 0.8em
	position absolute
	left 80px
	
	#la_jscamp
		color jscampBlue
	
	#la_asia
		color jscampYellow
	
	#la_undisclosured
		color white
		background-color black
		font-size 0.58em
		line-height 1em
		transform rotate(-9deg)
		position relative
		left -0.8em
		animation punch 1s linear
	
	#ls_info
		font-size 0.28em
		line-height 1em
		margin 1.5em 0 0 -3em
		text-align center
		line-height 1.35em
		color #444
		animation fadein 1.5s linear

#la_landscape
	position absolute
	top 170px
	left -20px
	font-size 3.5em

	div
		position absolute

	#la_palm
		color jscampGreen
		font-size 1.05em
		top -0.99em
		left 1.63em
		transform rotate(-80deg)
		animation palm 10s infinite ease-in-out
		
	#la_trunk
		color jscampBrown
		top -0.5em
		left 1.55em
		
	#la_sea
		color jscampBlue
		position relative
		animation sea 8s infinite ease-in-out
	
	#la_beach
		color jscampYellow

#messageCont
	display none
	position relative
	margin 0 auto
	width 700px
	height 130px
	font-weight bold
	text-align center
	transform perspective(500px)
	transform-origin center center
	transform-style preserve-3d

	&.flipped
		.front
			transform rotateX(-180deg)
		.back
			transform rotateX(0deg)
	
	div
		position absolute
		top 0px
		bottom 0px
		left 0px
		right 0px
		backface-visibility hidden
		transition all 0.4s ease-out


		&.front
			border-radius 8px
			border 1px solid jscampYellow
			background jscampYellow
			color #fff
			transform rotateX(0deg)
			
		&.back
			visibility hidden
			transform rotateX(180deg)

	
	#message
		padding 31px 40px

		line-height 1.4em
		font-size 1.5em

	
	#sponsors
		font-size 0.8em
		padding 15px 30px 25px 30px
		
		img
			margin 10px
			border 1px solid #eee
			border-radius 8px
			

#aboutpage
	background #000
	color #fff

#biglove, #abouttext

	margin 60px auto
	text-align center

#biglove
	width mWidth
	font-size 4em
	font-weight bold

	
#js
	color #000
	width 3em
	height 3em
	font-size 0.5em
	font-family Helvetica, Arial
	padding 0.8em 0.2em 0em 0.6em
	background #FFE100
	
#asia
	color jscampGreen
	
#love
	color red
	
#abouttext
	color #fff
	width mWidth - 46%
	line-height 1.2em

#conferencepage
	background jscampYellow
	
.sessiontype
	width mWidth
	margin 0 auto
	
	.sessionicon
		float left
		width 10em	
		height 10em
		background jscampGreen
		border-radius 8px
		
	.sessiondesc
		margin-left 11.6em
		
		.title
			font-size 4em
			font-weight bold

	.speakers
		margin-top 15px
		
		li
			float left
			margin 0 50px 16px 0
			width 6em
			height 6em
			background #FF9100
			border-radius 8px
			
	
#venuepage
	background jscampGreen


			
#top
	position fixed
	top 0px
	left 0px
	right 0px
	display none

	table
		width 100%
		font-size 1.7em
		line-height 1.0em
		
		td
			padding 3px 6px 4px 6px
			font-weight bold
			
			a
				float right
				font-size 0.5em
				color #fff
				text-decoration none
				padding-right 5px
				

		td:nth-child(1)
			background #D1EBFF
			width 6em
		td:nth-child(2)
			background #000
			color #fff
			width 2.4em
			font-size 0.8em
		td:nth-child(3)
			background jscampBrown
			width 0.2em
		td:nth-child(4)
			background jscampGreen
			width 2em
		td:nth-child(5)
			background jscampYellow
		td:nth-child(6)
			background jscampBlue
			width 30%
			
#scrollinfo
	display none
	position fixed
	bottom 0px
	left 0px
	right 0px
	text-align center
	
	span
		position relative
		left 0.1em
		display block
		transform rotate(90deg)
		font-size 5em
		color #ddd
		animation bounce 0.6s infinite ease-out

.jscamp
	color jscampBlue
.asia
	color jscampYellow

a.twitter
	color white
	background #4099FF !important

a.facebook
	color white
	background #3B5998 !important


@keyframes punch
	0%
		opacity 0
	72%
		opacity 0
	75% 
		opacity 1
		transform scale(3), rotate(-3deg)
	90% 
		transform scale(0.9), rotate(-9deg)
	100% 
		transform scale(1), rotate(-9deg)

@keyframes sea
	0% 
		left -0.15em
	50% 
		left 0.05em
	100% 
		left -0.15em
		
@keyframes fadein
	0% 
		opacity 0
	80% 
		opacity 0
	100% 
		opacity 1

@keyframes palm
	0% 
		transform rotate(-80deg)
	40% 
		transform rotate(-82deg)
	55% 
		transform rotate(-88deg)
	85% 
		transform rotate(-82deg)
	100% 
		transform rotate(-80deg)
		
@keyframes bounce
	0%
		top 0px
	20%
		top -10px
	24%
		top -11px
	28%
		top -10px
	100%
		top 0px
	