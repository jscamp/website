@import "nib-index.styl"
@charset "utf-8";

global-reset()

@css {
	input::-moz-focus-inner, button::-moz-focus-inner { border: 0; }
}

backgroundColor = #fff
jscampYellow = orange
jscampBrown = brown
jscampGreen = green
jscampBlue = #38ACEC

@import "jscamp/typography.styl"

#body
	position absolute
	top 0px
	left 0px
	bottom 0px
	right 0px
	overflow auto
	background linear-gradient(top left, #D1EBFF 0%, white 60%)

#logoanim
	font-size 5em
	font-weight bold
	font-family Courier
	position relative
	float left
	width 800px
	height 450px
	
	img
		display none
	
#la_logo
	line-height 0.8em
	position absolute
	top 70px
	left 50px
	
	#la_jscamp
		color jscampBlue
	
	#la_asia
		color jscampYellow
	
	#la_undisclosured
		color white
		background-color black
		font-size 0.58em
		line-height 1em
		transform rotate(-9deg)
		position relative
		left -0.7em
		animation punch 1s linear
	
	#ls_info
		font-size 0.28em
		line-height 1em
		margin 1.5em 0 0 0.6em
		color #444
		animation fadein 1.5s linear

#la_landscape
	position absolute
	top 250px
	left -50px
	font-size 3.5em

	div
		position absolute

	#la_palm
		color jscampGreen
		font-size 1.05em
		top -0.98em
		left 1.6em
		transform rotate(-80deg)
		animation palm 10s infinite ease-in-out
		
	#la_trunk
		color jscampBrown
		top -0.5em
		left 1.55em
		
	#la_sea
		color jscampBlue
		position relative
		animation sea 8s infinite ease-in-out
	
	#la_beach
		color jscampYellow

#restofwebsite
	display none
	clear both
	position relative
	margin 0 auto
	width 960px

#sponsors
	display none	
	float left
	width 300px
	position relative

	h1
		margin 10px 0
		text-align center

ul#sponsor-list 
	margin 0 0 30px 0
	li 
		margin 0
		width:100%
		margin 10px 
		img
			display block
			margin-left auto
			margin-right auto

#register
	font-family Courier
	font-size 2.3em
	background-color jscampBlue
	color white
	padding 0px 30px 7px
	text-align center
	font-weight bold
	text-decoration none	
	border-radius 5px
	left 50%
	margin 20px 0 0 40px
	transition-duration(0.2s)
	&:hover
		background-color jscampYellow

nav
	float left
	width 25%
	display block
	height 100px
	position relative

	li
		font-family Courier
		font-size 2.3em
		transition-duration(0.2s)
		margin 5px 0
	a
		color jscampBlue
		text-decoration none
		font-weight bold	
		&:hover
			color jscampYellow
	#nav_logo
		font-weight bold
		font-family Courier
		transform scale(3)
		clearfix()
		position absolute
		left 0
		bottom 0
		
		#la_logo
			margin-left -50px
		#la_undisclosured
			font-size .6em
			padding 0 0 3px 0
			margin-left -3px
			line-height 0.5
		#ls_info
			font-size 5px
			margin 10px 0 0 0

#social 
	margin 0
	display block
	overflow hidden
	li
		float left
		width 60px
		display block
		height 33px
		span
			display none
		&:nth-child(1)
			background url(../img/facebook.png) no-repeat
			&:hover
				background url(../img/facebook-hover.png) no-repeat 2px 0
		&:nth-child(2)
			background url(../img/twitter.png) no-repeat
			&:hover
				background url(../img/twitter-hover.png) no-repeat 2px 0
		&:nth-child(3)
			background url(../img/email.png) no-repeat 9px 0
			&:hover
				background url(../img/email-hover.png) no-repeat 11px 0


.fixed
	position fixed
	top -1px
	right 0
	left 0
	
#speakers, #about, #venue, #program
	display block
	float right
	width 70%
	height 300px

@keyframes punch
	0%
		opacity 0
	72%
		opacity 0
	75% 
		opacity 1
		transform scale(3), rotate(-3deg)
	90% 
		transform scale(0.9), rotate(-9deg)
	100% 
		transform scale(1), rotate(-9deg)

@keyframes sea
	0% 
		left -0.15em
	50% 
		left 0.05em
	100% 
		left -0.15em
		
@keyframes fadein
	0% 
		opacity 0
	80% 
		opacity 0
	100% 
		opacity 1

@keyframes palm
	0% 
		transform rotate(-80deg)
	40% 
		transform rotate(-82deg)
	55% 
		transform rotate(-88deg)
	85% 
		transform rotate(-82deg)
	100% 
		transform rotate(-80deg)

@import "jscamp/responsive.styl"		